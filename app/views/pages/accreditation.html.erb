  <main id="main">
  	<section class="breadcrumbs">
  		<div class="container">

  			<ol>
  				<li><%=link_to "Home", "index.html"%></a></li>
  				<li>Accreditations</li>
  			</ol>
  			<h2>Our Accreditations</h2>

  		</div>
  	</section>
  	<!-- ======= Portfolio Section ======= -->
  	<section id="portfolio" class="portfolio">
  		<div class="container" data-aos="fade-up">

  			<div class="section-title">
  				<h2>Accreditations</h2>
  				<p>Magnam dolores commodi suscipit. Necessitatibus eius consequatur ex aliquid fuga eum quidem. Sit sint consectetur velit. Quisquam quos quisquam cupiditate. Et nemo qui impedit suscipit alias ea.</p>
  			</div>

  			<div class="row" data-aos="fade-up" data-aos-delay="100">
  				<div class="col-lg-12 d-flex justify-content-center">
  					<ul id="portfolio-flters">
  						<li data-filter="*" class="filter-active">All</li>
  						<li data-filter=".online">Online Programs</li>
  						<li data-filter=".regular">Regular Programs</li>
  						<li data-filter=".distance">Distance Programs</li>
  						<li data-filter=".extention">Extientions Programs</li>
  					</ul>
  				</div>
  			</div>

  			<div class="row portfolio-container" data-aos="fade-up" data-aos-delay="200">
          <% @accreditations.each do |a|%>
    				<div class="col-lg-4 col-md-6 portfolio-item <%= a.modality.html_safe%>">
    					<div class="portfolio-wrap">
							<% if a.accreditation_documents[0].blank? %>
								<div class="portfolio-info">
									<h4>Data Not Found</h4>
								</div>
							<% else %>
								<%= image_tag a.accreditation_documents[0], class: "img-fluid"%>
								<div class="portfolio-info">
									<h4><%= a.accreditation_title.html_safe%></h4>
									<p><%= a.modality.html_safe%></p>
									<div class="portfolio-links">
										<%= link_to '<i class="bx bx-plus"></i>'.html_safe, a.accreditation_documents[0], {'data-gall': "portfolioGallery",class: "venobox", title: a.accreditation_title.html_safe}%>
									</div>
								</div>
							<% end %>
    					</div>
    				</div>
          <%end%>

  			</div>

  		</div>
  	</section><!-- End Portfolio Section -->
  	
  	<section id="cta" class="cta">
  		<div class="container aos-init aos-animate " data-aos="zoom-in">
			<% @marketing.where(page_to_display: 'accreditation').each do |m|%>
				<div class="text-center">
					<h3><%= m.headline_title.html_safe%></h3>
					<p><%= m.description.html_safe%></p>
					<%= link_to "Learn more","#{m.action}", class:"cta-btn" %>
				</div>
			<% end %>
  		</div>
  	</section>
  	


  	

  </main><!-- End #main -->

