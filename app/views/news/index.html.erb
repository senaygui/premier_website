  <main id="main">
<!-- page title -->
<section class="bg-blue align-items-center d-flex" style="background:url(<%= asset_path("04.png")%>) no-repeat center center; background-size:cover;">
  <div class="container">
    <div class="row">
      <div class="col-12 text-center">
        <!-- Title -->
        <h1 class="text-white">News & Events</h1>
        <!-- Breadcrumb -->
        <div class="d-flex justify-content-center">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb breadcrumb-dark breadcrumb-dots mb-0">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active" aria-current="page">News & Events</li>
            </ol>
          </nav>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- /page title -->
<!-- blogs -->
<section class="section">
  <div class="container">
    <div class="row">
      <!-- blog post -->
      <%@news.each do |news|%>
        <article class="col-lg-4 col-sm-6 mb-5 mb-lg-0 d-flex align-self-stretch">
          <div class="card rounded-0 border-bottom border-primary border-top-0 border-left-0 border-right-0 hover-shadow">
            <%= image_tag news.photo, class:"card-img-top rounded-0" %>
            <div class="card-body  d-flex flex-column">
              <!-- post meta -->
              <ul class="list-inline mb-3">
                <!-- post date -->
                <li class="list-inline-item mr-3 ml-0"><%= Date.parse(news.created_at.to_s).strftime('%A')%>, <%= Date.parse(news.created_at.to_s).to_formatted_s(:long)%></li>
                <!-- author -->
                <li class="list-inline-item mr-3 ml-0">By <%= news.published_by%></li>
              </ul>
              <%= link_to news_path(news) do%>
                <h4 class="card-title"><%= news.news_title.html_safe%></h4>
              <% end%>
              <p class="card-text"><%= news.overview.truncate(256).html_safe%></p>
              <%= link_to 'Read More', news_path(news), class: "btn btn-primary btn-sm" %>
            </div>
          </div>
        </article>
      <%end%>
    </div>
    <%= paginate @news %>
  </div>
</section>
<!-- /blogs -->
</main>
