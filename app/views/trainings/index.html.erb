<main>

<!-- =======================
Page Banner START -->
<section class="bg-blue align-items-center d-flex" style="background:url(assets/images/pattern/04.png) no-repeat center center; background-size:cover;">
  <div class="container">
    <div class="row">
      <div class="col-12 text-center">
        <!-- Title -->
        <h1 class="text-white">Traingings & Research</h1>
        <!-- Breadcrumb -->
        <div class="d-flex justify-content-center">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb breadcrumb-dark breadcrumb-dots mb-0">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active" aria-current="page">Trainings</li>
            </ol>
          </nav>
        </div>
      </div>
    </div>
  </div>
</section>
<section class="py-5">
  <div class="container">
    <!-- Title -->
    <div class="row mb-4">
      <div class="col-12 col-lg-9 text-center mx-auto mb-4">
        <h2 class="fs-1">Our Short Term Trainings</h2>
        <p class="mb-0">Here Are our Short Term Training programs </p>
      </div>
    </div>

    <div class="row g-4">

      <% Training.all.each do |pro|%>
        <div class="col-sm-6 col-lg-4 col-xl-3">
          <!-- Image -->
          <div class="card card-metro overflow-hidden rounded-3">
            <%= image_tag pro.photo, class:"card-img-top" ,alt: "#{pro.title}"%>
            <!-- Image overlay -->
            <div class="card-img-overlay d-flex"> 
              <!-- Info -->
              <div class="mt-auto card-text">
                <%= link_to pro.title, training_path(pro),class: "text-white mt-auto h5 stretched-link"%>
                <div class="text-white"><%= pro.training_modules.count%> Courses</div>
              </div>
            </div>
          </div>
        </div>
      <%end%>

    </div> <!-- Row END -->
  </div>
</section>

<!-- =======================
Counter START -->
<section class="py-5">
  <div class="container position-relative">
    <div class="row">
      <div class="col-12">
        <!-- SVG decoration START -->
        <figure class="position-absolute top-50 start-50 translate-middle ms-2">
          <svg>
            <path class="fill-white opacity-2" d="m496 22.999c0 10.493-8.506 18.999-18.999 18.999s-19-8.506-19-18.999 8.507-18.999 19-18.999 18.999 8.506 18.999 18.999z"></path>
